{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "importHelpers": true,
    "lib": ["DOM", "ES2018"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
